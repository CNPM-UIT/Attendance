<Window x:Class="desktop_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:desktop_app"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440">
    <Grid ScrollViewer.HorizontalScrollBarVisibility="Auto" Margin="0">
        <Grid Height="51" Margin="16,13,10,0" VerticalAlignment="Top" Background="#FF0088A3">
            <Grid>
                <Button HorizontalAlignment="Left"
                ToolTip="MaterialDesignFloatingActionMiniLightButton" RenderTransformOrigin="0.468,0.772" Background="#00959595" Width="47" VerticalAlignment="Center" HorizontalContentAlignment="Left" Padding="1" Margin="30,0,0,0" BorderBrush="#00707070" Click="Button_Click_3">
                    <materialDesign:PackIcon Kind="School" Height="43" Width="37" Padding="-0.6,0,0,0" Foreground="White" />
                </Button>
            </Grid>

            <Grid HorizontalAlignment="Right" Height="41" Margin="0,5,0,0" VerticalAlignment="Top" Width="343" RenderTransformOrigin="0.413,0.634">

                <Button HorizontalAlignment="Left"
                      ToolTip="MaterialDesignFloatingActionMiniLightButton" RenderTransformOrigin="0.468,0.772" Background="#00959595" BorderBrush="#00707070">
                    <materialDesign:PackIcon Kind="NotificationsActive" Foreground="White" Height="41" Width="34" RenderTransformOrigin="-2.389,0.636" />
                </Button>

                <Button HorizontalAlignment="Left"
                      ToolTip="MaterialDesignFloatingActionMiniLightButton" RenderTransformOrigin="0.468,0.772" Background="#00CDC9C9" Foreground="White" Margin="50,0,0,0" Width="43" BorderBrush="#00707070">
                    <materialDesign:PackIcon Kind="MessageSettings" Height="41" Width="33" />
                </Button>

                <Label Content="Le Thi Phuong Ngan" Margin="0,0,60,0" VerticalAlignment="Center" Width="150" Background="#00959191" Foreground="White" FontWeight="Bold" HorizontalContentAlignment="Right" HorizontalAlignment="Right"/>

                <Button HorizontalAlignment="Right"
                      ToolTip="MaterialDesignFloatingActionMiniLightButton" RenderTransformOrigin="0.468,0.772" Background="#00CDC9C9" Foreground="White" Margin="50,0,18.7,0" Width="43" BorderBrush="#00707070">
                    <materialDesign:PackIcon Kind="UserCircle" Height="36" Width="41" />
                </Button>
                <Menu HorizontalAlignment="Left" Height="51" Margin="1374,0,-60,0" VerticalAlignment="Top" Width="100"/>
            </Grid>
            <TextBlock HorizontalAlignment="Left" Margin="90,11,0,0" TextWrapping="Wrap" Text="ATTENDANCE" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" Foreground="White"/>


        </Grid>
        <StackPanel  HorizontalAlignment="Left" Background="Aqua" VerticalAlignment="Top"  Margin="15,66,0,0">

        </StackPanel>
        
        
        <Grid HorizontalAlignment="Center" Height="49" Margin="18,71,10,0" VerticalAlignment="Top" Width="1404" Background="#FF00B8D4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="29*"/>
                <ColumnDefinition Width="79*"/>
            </Grid.ColumnDefinitions>

            <ComboBox HorizontalAlignment="Left" VerticalAlignment="Center" Margin="98,14,0,13" VerticalContentAlignment="Center" SelectionChanged="ComboBox_SelectionChanged_1">
                <ComboBoxItem x:Name="cbb_19_20_2nd_term" Selected="Cbb_19_20_2nd_term_Selected">2019-2020 - 2nd term</ComboBoxItem>
                <ComboBoxItem x:Name="cbb_19_20_1st_term" Selected="Cbb_19_20_1st_term_Selected" IsSelected="True">2019-2020 - 1st term</ComboBoxItem>
                <ComboBoxItem x:Name="cbb_18_19_2nd_term" Selected="Cbb_18_19_2nd_term_Selected">2018-2019 - 2nd term</ComboBoxItem>
            </ComboBox>
        </Grid>
        <!-- Danh Sach Lop hoc -->
        <Grid x:Name="DanhSachLopHoc" HorizontalAlignment="Left" Height="853" Margin="18,135,0,0" VerticalAlignment="Top" Width="1404" Background="#FFF3BCBC" Visibility="Hidden">
            <Button Content="Button" HorizontalAlignment="Left" Margin="586,148,0,0" VerticalAlignment="Top" Width="74" Click="Button_Click_4"/>
            <Button Content="Button" HorizontalAlignment="Left" Margin="620,393,0,0" VerticalAlignment="Top" Width="75"/>
            <Button x:Name="aaa" Content="Button" HorizontalAlignment="Left" Margin="620,464,0,0" VerticalAlignment="Top" Width="75"/>

        </Grid>

        <!-- Grid quan li lop hoc -->
        <Grid x:Name="QuanLiLopHoc" HorizontalAlignment="Left" Height="853" Margin="18,135,0,0" VerticalAlignment="Top" Width="1404" Background="#3362EBFF">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <!-- Title Quan li -->
                <Grid Grid.Column="0" Background="#FF98F7F3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Width="329" Height="328">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Button Content="Button" HorizontalAlignment="Left" Margin="39,54,0,0" VerticalAlignment="Top" Width="75"/>


                </Grid>

                <!-- Noi dung quan li -->

                <!-- Danh sach buoi hoc-->
                <Grid x:Name="DanhSachBuoiHoc" Grid.Column="1" Background="#FF1F4D4B" Width="634" HorizontalAlignment="Left" Margin="10,10,0,10" Visibility="Hidden">

                    <ScrollViewer>

                    </ScrollViewer>
                </Grid>
                <!-- Danh sach tai lieu-->
                <Grid x:Name="DanhSachTaiLieu" Grid.Column="1" Background="#FF1F4D4B" Width="634" HorizontalAlignment="Left" Margin="10,10,0,10" Visibility="Hidden">

                    <ScrollViewer>

                    </ScrollViewer>
                </Grid>
                <!--danh sach quan li thong ke-->
                <Grid x:Name="DanhSachQuanLiThongKe" Grid.Column="1" Background="#001F4D4B" Width="634" Height="634"  HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                     </Grid.RowDefinitions>

                    <Border  CornerRadius="20" Background="#FF4294A0" BorderThickness="1" Padding="2" >
                        <StackPanel Margin="0">
                            <Button HorizontalAlignment="Center"
                      ToolTip="MaterialDesignFloatingActionMiniLightButton" RenderTransformOrigin="0.468,0.772" Background="#00CDC9C9" Foreground="White" Margin="0,50,0,0" BorderBrush="#00707070" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="CheckOutline" Height="150" Width="150" />
                            </Button>
                            <Label Content="Thống kê điểm danh" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,40,0,0" Foreground="White" FontSize="24" FontWeight="Bold" FontFamily="Segoe UI Black"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Grid.Column="0" Grid.Row="1"  CornerRadius="20" Background="#1e4b60" BorderThickness="1" Padding="2" >
                        <StackPanel Margin="0">
                            <Button HorizontalAlignment="Center"
                      ToolTip="MaterialDesignFloatingActionMiniLightButton" RenderTransformOrigin="0.468,0.772" Background="#00CDC9C9" Foreground="White" Margin="0,50,0,0" BorderBrush="#00707070" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Badge"  Height="150" Width="150" />
                            </Button>
                            <Label Content="Thống kê điểm số" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,40,0,0" Foreground="White" FontSize="24" FontWeight="Bold" FontFamily="Segoe UI Black"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Grid.Row="0"  CornerRadius="20" Background="#FFF1C86C" BorderThickness="1" Padding="2" >
                        <StackPanel Margin="0">
                        <Button HorizontalAlignment="Center"
                      ToolTip="MaterialDesignFloatingActionMiniLightButton" RenderTransformOrigin="0.468,0.772" Background="#00CDC9C9" Foreground="White" Margin="0" BorderBrush="#00707070" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CommentPersonOutline" Height="150" Width="150" Margin="0,50,0,0" />
                            </Button>
                            <Label Content="Thống kê tương tác" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,40,0,0" Foreground="White" FontSize="24" FontWeight="Bold" FontFamily="Segoe UI Black"/>


                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Grid.Row="1"  CornerRadius="20" Background="#f4614f" BorderThickness="1" Padding="2" Margin="0" >
                        <StackPanel Margin="0">
                        <Button HorizontalAlignment="Center"
                      ToolTip="MaterialDesignFloatingActionMiniLightButton" RenderTransformOrigin="0.468,0.772" Background="#00CDC9C9" Foreground="White" Margin="0,50,0,0" BorderBrush="#00707070" VerticalAlignment="Top">
                            <materialDesign:PackIcon Kind="GoogleAnalytics" Height="150" Width="150" />
                        </Button>
                            <Label Content="Thống kê đánh giá" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,40,0,0" Foreground="White" FontSize="24" FontWeight="Bold" FontFamily="Segoe UI Black"/>
                        </StackPanel>
                    </Border>

                   

                </Grid>





            </Grid>
        </Grid>





    </Grid>
</Window>
